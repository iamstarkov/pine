{
  "name": "pine-project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "foo": "echo foo",
    "lerna": "lerna",
    "build": "yarn clean && yarn compile",
    "compile": "tsc --build",
    "clean": "yarn workspaces run rimraf -rf ./dist tsconfig.tsbuildinfo",
    "pine:prod": "./packages/pine/bin/pine",
    "pine:ts": "ts-node ./packages/pine/bin/pine",
    "pine:dev": "PINE_ENV=development ts-node ./packages/pine/bin/pine",
    "format": "prettier --write 'packages/**/src/**/*.ts' packages/**/test/**/*.ts",
    "lint": "eslint packages/**/src --ext .ts",
    "prepublishOnly": "yarn build",
    "test": "yarn pine:dev test",
    "ci": "yarn lint && yarn pine:prod test"
  },
  "author": "Fredrik Forsmo <fredrik.forsmo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "jest": "27.2.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  }
}
